@{
    ViewData["Title"] = "UAMPass - Portal de Pasantías para estudiantes";
}

<!-- Landing Page Principal -->
<div class="d-flex flex-column align-items-center justify-content-center min-vh-100 text-center" style="background-color: #f9f9f9;">
    <div class="card shadow p-5 border-0" style="max-width: 600px; border-radius: 20px;">
        <h1 class="fw-bold mb-4" style="color: #04a7ad;">Bienvenido a UAMPass</h1>
        <p class="text-muted mb-5">Selecciona tu portal para continuar</p>

        <div class="NavBar">
            <a asp-controller="Estudiantes" asp-action="Index"
               class="btn_estudiantes"
               style="background-color: #04a7ad; border-radius: 10px;">
                Portal Estudiantes
            </a>

            <a asp-controller="Empresas" asp-action="Index" 
               class="btn_Empresas"
               style="border-color: #04a7ad; color: #04a7ad; border-radius: 10px;">
                Portal Empresas
            </a>

            <a asp-controller="Administracion" asp-action="Index"
               class="btn_Administracion"
               style="background-color: #027d81; border-radius: 10px;">
                Portal Administración
            </a>
        </div>
    </div>

    <footer class="mt-5 text-muted small">
        <p>© 2025 Universidad Americana (UAM) · Proyecto UAMPass</p>
    </footer>
</div>
