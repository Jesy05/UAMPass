@model IEnumerable<UAMPass.Models.Estudiante>
@{
    ViewData["Title"] = "Portal Estudiantes";
}
<h2>Estudiantes</h2>
<p><a asp-action="Create" class="btn btn-primary">Nuevo estudiante</a></p>
<table class="table">
    <thead><tr><th>Id</th><th>Nombre</th><th>Correo</th><th>Facultad</th><th></th></tr></thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Id</td>
                <td>@e.Nombre</td>
                <td>@e.Correo</td>
                <td>@e.Facultad</td>
                <td>
                    <a asp-action="Details" asp-route-id="@e.Id">Ver</a> |
                    <a asp-action="Edit" asp-route-id="@e.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@e.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
